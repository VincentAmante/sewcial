// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// schema.prisma
model Example {
  id      String @id @default(uuid())
  details String
}

model Author {
  id        String     @id @default(uuid())
  name      String
  templates Template[]
}

model Template {
  id          String @id @default(uuid())
  name        String
  description String
  detailsSrc  String
  authorId    String
  author      Author @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

model CatalogueItem {
  id          String @id @default(uuid())
  name        String
  description String
  imageSrc    String
}
