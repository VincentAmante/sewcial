// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// schema.prisma
model Example {
  id      String @id @default(uuid())
  details String
}

model Author {
  id        String     @id @default(uuid())
  name      String
  templates Template[]
}

model Template {
  id                     String                   @id @default(uuid())
  name                   String
  description            String
  detailsSrc             String
  authorId               String
  priceAED               Float
  isFeatured             Boolean
  author                 Author                   @relation(fields: [authorId], references: [id])
  TemplateTagsOnTemplate TemplateTagsOnTemplate[]

  @@index([authorId])
}

enum TemplateTagType {
  CATEGORY
  STYLE
  SKILL
}

enum CatalogueItemTagType {
  CATEGORY
  STYLE
}

model TemplateTag {
  id                     String                   @id @default(uuid())
  name                   String
  type                   TemplateTagType
  TemplateTagsOnTemplate TemplateTagsOnTemplate[]
}

model TemplateTagsOnTemplate {
  id            String      @id @default(uuid())
  templateId    String
  templateTagId String
  template      Template    @relation(fields: [templateId], references: [id])
  templateTag   TemplateTag @relation(fields: [templateTagId], references: [id])

  @@index([templateId])
  @@index([templateTagId])
}

model CatalogueItem {
  id                       String                         @id @default(uuid())
  name                     String
  description              String
  imageSrc                 String
  priceAED                 Float
  isFeatured               Boolean                        @default(false)
  CatalogueTagsOnCatalogue CatalogueTagsOnCatalogueItem[]
}

model CatalogueTag {
  id                       String                         @id @default(uuid())
  name                     String
  type                     CatalogueItemTagType
  CatalogueTagsOnCatalogue CatalogueTagsOnCatalogueItem[]
}

model CatalogueTagsOnCatalogueItem {
  id              String        @id @default(uuid())
  catalogueItemId String
  catalogueTagId  String
  catalogueItem   CatalogueItem @relation(fields: [catalogueItemId], references: [id])
  catalogueTag    CatalogueTag  @relation(fields: [catalogueTagId], references: [id])

  @@index([catalogueItemId])
  @@index([catalogueTagId])
}

model Event {
  id        String   @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  title     String
}

model ContactSubmission {
  id        String   @id @default(uuid())
  name      String
  email     String
  mobile    String
  message   String
  createdAt DateTime @default(now())
}
