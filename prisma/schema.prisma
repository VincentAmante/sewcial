generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

// schema.prisma
model Example {
  id          String @id @default(uuid())
  details     String
}

